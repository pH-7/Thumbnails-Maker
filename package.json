{
  "name": "thumbnail-maker",
  "productName": "YouTube Thumbnail Creator",
  "version": "3.1.0",
  "description": "Create professional YouTube thumbnails with multiple images, custom layouts, and intelligent enhancement features.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "mas": "electron-builder --mac mas",
    "mas-dev": "electron-builder --mac mas --publish never",
    "mas-package": "electron-builder --mac mas --publish never",
    "mas-upload": "xcrun altool --upload-app --type osx --file dist/mas/*.pkg --username pierre-henry@soria.tel --password @keychain:Application\\ Loader",
    "setup": "electron-builder install-app-deps && npm run rebuild-sharp",
    "rebuild-sharp": "npx @electron/rebuild -f -w sharp"
  },
  "author": "Pierre-Henry Soria",
  "homepage": "https://github.com/pH-7/Thumbnails-Maker",
  "license": "MIT",
  "build": {
    "appId": "ph7.me.youtube-thumbnail-combiner",
    "productName": "YouTube Thumbnail Creator",
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "build/mac/icon.icns",
      "extendInfo": {
        "CFBundleIconName": "icon",
        "CFBundleIconFile": "icon.icns"
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "target": [
        "mas",
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mas": {
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "hardenedRuntime": false,
      "provisioningProfile": "build/embedded.provisionprofile",
      "type": "distribution",
      "category": "public.app-category.graphics-design",
      "artifactName": "${productName}-${version}.pkg",
      "identity": "DF441120118B19010DDC6C6C4D51B089AB622AD4"
    },
    "afterSign": "scripts/notarize.js"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@electron/osx-sign": "^1.3.3",
    "@electron/packager": "^18.4.0",
    "@electron/rebuild": "^3.2.9",
    "electron": "^25.9.8",
    "electron-builder": "^24.0.0",
    "jest": "^29.7.0"
  }
}
