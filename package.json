{
  "name": "thumbnail-creator",
  "productName": "Thumbnail Creator",
  "version": "1.0.0",
  "description": "Create YouTube thumbnails by combining three images",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "mas": "electron-builder --mac mas --publish always",
    "mas-dev": "electron-builder --mac mas",
    "mas-package": "electron-builder --mac mas --publish never",
    "mas-build": "node scripts/mas-build.js",
    "direct-build": "node scripts/direct-build.js",
    "check-certs": "node scripts/check-certificates.js",
    "list-certs": "./scripts/list-certificates.sh",
    "verify-profile": "node scripts/verify-profile.js",
    "manual-build-mas": "node scripts/manual-build-mas.js",
    "prepare-for-transporter": "node scripts/prepare-for-transporter.js",
    "postinstall": "electron-builder install-app-deps && npm run rebuild-sharp",
    "rebuild-sharp": "electron-rebuild -f -w sharp",
    "submit-appstore": "node scripts/app-store-submit.js",
    "fastlane-setup": "./deploy-to-app-store.sh setup",
    "fastlane-build": "./deploy-to-app-store.sh build_mac_app",
    "fastlane-release": "./deploy-to-app-store.sh release",
    "fastlane-match": "./deploy-to-app-store.sh match_appstore",
    "fastlane-upload": "./deploy-to-app-store.sh upload_to_app_store",
    "fastlane-clean": "./deploy-to-app-store.sh clean",
    "reset-match": "./scripts/reset-match.sh",
    "no-certs-build": "./deploy-to-app-store.sh no_certs_build",
    "force-clear-cert": "./scripts/force-clear-cert.sh",
    "auto-build": "node scripts/auto-cert-build.js",
    "simple-build": "node scripts/simple-build.js"
  },
  "author": "Pierre-Henry Soria",
  "license": "MIT",
  "build": {
    "appId": "ph7.me.youtube-thumbnail-combiner",
    "productName": "YouTube Thumbnail Creator",
    "extraMetadata": {
      "build": {
        "ElectronTeamID": "2V8LZ2444Y"
      }
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "build/mac/icon.icns",
      "extendInfo": {
        "CFBundleIconName": "icon",
        "CFBundleIconFile": "icon.icns"
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "target": [
        "mas",
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mas": {
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "hardenedRuntime": false,
      "provisioningProfile": "build/embedded.provisionprofile",
      "type": "distribution",
      "category": "public.app-category.graphics-design",
      "artifactName": "${productName}-${version}.pkg"
    },
    "afterSign": "scripts/notarize.js"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@electron/osx-sign": "^1.3.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-notarize": "^1.2.2",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0"
  }
}
